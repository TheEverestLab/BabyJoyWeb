---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

// Import Baby Joy screenshots
import heroScreenshot from '~/assets/images/app-store/appstore-0.png';
import featureScreenshot from '~/assets/images/app-store/appstore-1.PNG';
import contentScreenshot1 from '~/assets/images/app-store/appstore-2.PNG';
import contentScreenshot2 from '~/assets/images/app-store/appstore-3.PNG';
import contentScreenshot3 from '~/assets/images/app-store/appstore-4.PNG';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://apps.apple.com/sg/app/baby-joy/id6475108933';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://apps.apple.com/sg/app/baby-joy/id6475108933';

const metadata = {
  title: 'Baby Joy - Your Complete Parenting Companion',
  description: 'Track your baby\'s growth, milestones, and daily activities with Baby Joy. The comprehensive parenting app designed to make your journey easier.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      position="left"
      links={[
        { text: 'Features', href: '#features' },
        { text: 'How It Works', href: '#how-it-works' },
        { text: 'About', href: '/about' },
        { text: 'Contact', href: '/contact' },
      ]}
      actions={[
        {
          text: 'Download',
          href: '#download',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Parenting Made Simple"
    image={{
      src: heroScreenshot,
      alt: 'Baby Joy App Main Screen',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">Baby Joy</span>: <br /> Track Every Precious <span
        class="hidden xl:inline">Moment</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        From first smile to first steps, capture and track your baby's journey with ease.
      </span>
      Download Baby Joy and transform the way you document your little one's growth.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="how-it-works"
    title="Start Tracking in Minutes"
    subtitle="Baby Joy is designed to be intuitive and easy to use, even during those sleep-deprived moments. Get started in just a few simple steps."
    tagline="How It Works"
    columns={2}
    items={[
      {
        title: 'Download Baby Joy',
        description: `Get the app from the App Store and install it on your iPhone or iPad.`,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Create Baby Profile',
        description:
          'Add your baby\'s name, birthday, and photo to personalize the experience.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Start Tracking',
        description: 'Log daily activities like feeding, sleeping, and diaper changes with one tap.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Watch Them Grow',
        description: `Track growth metrics and milestones, creating a complete record of your baby's development.`,
        icon: 'tabler:square-number-4',
      },
    ]}
    image={{
      src: featureScreenshot,
      alt: 'Baby Joy Features Overview',
    }}
  />

  <!-- Content Widget **************** -->

  <Content
    id="features"
    isReversed
    items={[
      {
        title: 'Growth Tracking',
        description:
          'Monitor height, weight, and head circumference with WHO growth charts and percentile tracking.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Daily Activities',
        description:
          'Track feeding times, sleep patterns, diaper changes, and more with intuitive logging tools.',
        icon: 'tabler:clock',
      },
      {
        title: 'Milestone Memories',
        description:
          'Capture first words, steps, and special moments with photos and detailed notes.',
        icon: 'tabler:camera',
      },
      {
        title: 'Health Records',
        description: 'Keep vaccination schedules, doctor visits, and medications organized in one place.',
        icon: 'tabler:vaccine',
      },
    ]}
    image={{
      src: contentScreenshot1,
      alt: 'Baby Joy Main Features',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Essential Features for Modern Parents</h3>
      Everything you need to track your baby's development in one beautiful, easy-to-use app.
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Smart Reminders',
        description: 'Set customizable reminders for feeding times, medication, and appointments.',
        icon: 'tabler:bell',
      },
      {
        title: 'Data Export',
        description:
          'Export comprehensive reports as PDFs to share with pediatricians or family members.',
        icon: 'tabler:file-export',
      },
      {
        title: 'Multiple Profiles',
        description: 'Track multiple children with separate profiles, perfect for growing families.',
        icon: 'tabler:users',
      },
      {
        title: 'Secure Backup',
        description: `All data is automatically backed up to iCloud, ensuring your memories are never lost.`,
        icon: 'tabler:cloud-lock',
      },
    ]}
    image={{
      src: contentScreenshot2,
      alt: 'Baby Joy Advanced Features',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Advanced Tools for Peace of Mind</h3>
      Powerful features that grow with your family's needs.
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Beautiful Interface',
        description: 'Clean, intuitive design that\'s easy to navigate even with one hand.',
        icon: 'tabler:palette',
      },
      {
        title: 'Privacy First',
        description:
          'Your data is encrypted and secure. We never share or sell your personal information.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Regular Updates',
        description: 'Continuous improvements and new features based on parent feedback.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Offline Mode',
        description: 'Track activities even without internet connection; syncs when you\'re back online.',
        icon: 'tabler:wifi-off',
      },
    ]}
    image={{
      src: contentScreenshot3,
      alt: 'Baby Joy User Experience',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Designed for Real Parents</h3>
      Built with love and tested by parents who understand your needs.
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'Is Baby Joy free to use?',
        description:
          'Baby Joy offers a free version with essential tracking features. Premium features are available through an optional subscription for enhanced functionality.',
        icon: 'tabler:chevron-down',
      },
      {
        title: 'Can multiple caregivers use the app?',
        description: `Yes! You can share access with partners, grandparents, or caregivers so everyone stays updated on the baby's schedule and needs.`,
        icon: 'tabler:chevron-down',
      },
      {
        title: 'Is my data secure?',
        description:
          'Absolutely. All data is encrypted and stored securely. We use industry-standard security measures and never share your personal information with third parties.',
        icon: 'tabler:chevron-down',
      },
      {
        title: 'Can I export my data?',
        description: `Yes, you can export your baby's data as PDF reports, perfect for pediatrician visits or creating keepsake records.`,
        icon: 'tabler:chevron-down',
      },
      {
        title: 'Does it work offline?',
        description:
          'Yes! You can track activities offline, and the app will sync automatically when you reconnect to the internet.',
        icon: 'tabler:chevron-down',
      },
      {
        title: 'Can I track multiple children?',
        description: `Absolutely! Baby Joy supports multiple child profiles, making it perfect for twins or growing families.`,
        icon: 'tabler:chevron-down',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { amount: '50K+', icon: 'tabler:download' },
      { amount: '4.8', icon: 'tabler:star' },
      { amount: '1M+', icon: 'tabler:calendar-event' },
      { amount: '99.9%', icon: 'tabler:shield-check' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="download"
    title="Start Your Baby Joy Journey Today"
    subtitle="Join thousands of parents who are already tracking their baby's precious moments with Baby Joy."
  >
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </CallToAction>
</Layout>