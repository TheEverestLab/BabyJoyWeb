import screenshot5 from '~/assets/images/app-store/appstore-5.png';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://apps.apple.com/sg/app/baby-joy/id6475108933';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://apps.apple.com/sg/app/baby-joy/id6475108933';

const metadata = {
  title: 'Baby Joy - Parenting & Baby Tracking App',
  description: 'Track your baby\'s growth, milestones, and daily activities with Baby Joy - the comprehensive parenting companion app.',
