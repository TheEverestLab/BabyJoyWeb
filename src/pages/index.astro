          </div>
        </div>
        <!-- Carousel Dots -->
        <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex justify-center items-center gap-2 bg-black/20 backdrop-blur-sm rounded-full px-3 py-1.5" id="mainCarouselDots">
          <button class="w-2 h-2 rounded-full bg-white transition-all duration-300" data-slide="0" style="opacity: 0.9"></button>
          <button class="w-2 h-2 rounded-full bg-white/50 transition-all duration-300 hover:bg-white/70" data-slide="1"></button>
          <button class="w-2 h-2 rounded-full bg-white/50 transition-all duration-300 hover:bg-white/70" data-slide="2"></button>
          <button class="w-2 h-2 rounded-full bg-white/50 transition-all duration-300 hover:bg-white/70" data-slide="3"></button>
          <button class="w-2 h-2 rounded-full bg-white/50 transition-all duration-300 hover:bg-white/70" data-slide="4"></button>
          <button class="w-2 h-2 rounded-full bg-white/50 transition-all duration-300 hover:bg-white/70" data-slide="5"></button>
        </div>
      </div>
    </Fragment>
  </Content>

  <script>
    // Main Features Carousel
    const mainTrack = document.getElementById('mainCarouselTrack');
    const mainDots = document.querySelectorAll('#mainCarouselDots button');
    let mainCurrentSlide = 0;
    const mainTotalSlides = 6;

    function goToMainSlide(slideIndex) {
      mainCurrentSlide = slideIndex;
      if (mainTrack) {
        mainTrack.style.transform = `translateX(-${mainCurrentSlide * 100}%)`;
      }
      
      mainDots.forEach((dot, index) => {
        if (index === mainCurrentSlide) {
          dot.style.opacity = '0.9';
          dot.style.backgroundColor = 'white';
        } else {
          dot.style.opacity = '1';
          dot.style.backgroundColor = 'rgba(255, 255, 255, 0.5)';
        }
      });
    }

    // Auto-play carousel
    function autoPlayMain() {
      mainCurrentSlide = (mainCurrentSlide + 1) % mainTotalSlides;
      goToMainSlide(mainCurrentSlide);
    }

    // Set up auto-play interval
    let mainAutoPlayInterval = setInterval(autoPlayMain, 3000);

    // Add click handlers to dots
    mainDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        clearInterval(mainAutoPlayInterval);
        goToMainSlide(index);
        mainAutoPlayInterval = setInterval(autoPlayMain, 3000);
      });
    });

    // Pause on hover
    if (mainTrack) {
      mainTrack.addEventListener('mouseenter', () => clearInterval(mainAutoPlayInterval));
      mainTrack.addEventListener('mouseleave', () => {
        mainAutoPlayInterval = setInterval(autoPlayMain, 3000);
      });
    }
  </script>

